        <li><%= link_to 'Create Talent', new_talent_path %></li>
        <li><%= link_to 'New Student', new_student_path %></li>
      </ul>
    </div>
  </div>
</nav>
    <% @talents.each do |talent| %>
      <tr>
        <td><%= talent.name %></td>
        <td><%= link_to ' Show ', talent %></td> 
